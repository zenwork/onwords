{
  "tasks": {
    "start": "deno run -A --watch=static/,routes/ dev.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "options": {
      "semiColons": false,
      "singleQuote": true,
      "lineWidth": 140,
      "indentWidth": 2,
      "proseWrap": "always",
      "useTabs": false
    }
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
